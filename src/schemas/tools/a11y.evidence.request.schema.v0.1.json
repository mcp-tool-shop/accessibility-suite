{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcp-tool-shop.github.io/schemas/tools/a11y.evidence.request.schema.v0.1.json",
  "title": "Tool Request Schema: a11y.evidence v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["mcp", "input"],
  "properties": {
    "mcp": {
      "type": "object",
      "additionalProperties": false,
      "required": ["envelope", "request_id", "tool", "client"],
      "properties": {
        "envelope": { "const": "mcp.envelope_v0_1" },
        "request_id": { "type": "string", "minLength": 1 },
        "tool": { "const": "a11y.evidence" },
        "client": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "version"],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "version": { "type": "string", "minLength": 1 }
          }
        }
      },
      "not": {
        "anyOf": [
          { "required": ["ok"] }
        ]
      }
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": ["targets"],
      "properties": {
        "targets": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind"],
            "properties": {
              "kind": { "enum": ["file", "url", "cli_log"] },
              "path": { "type": "string" },
              "url": { "type": "string" }
            },
            "allOf": [
              {
                "if": { "properties": { "kind": { "const": "file" } } },
                "then": { "required": ["path"] }
              },
              {
                "if": { "properties": { "kind": { "const": "cli_log" } } },
                "then": { "required": ["path"] }
              },
              {
                "if": { "properties": { "kind": { "const": "url" } } },
                "then": { "required": ["url"] }
              }
            ]
          }
        },
        "capture": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "html": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "canonicalize": { "type": "boolean", "default": true },
                "strip_dynamic": { "type": "boolean", "default": true }
              }
            },
            "dom": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "snapshot": { "type": "boolean", "default": true },
                "include_css_selectors": { "type": "boolean", "default": true }
              }
            },
            "environment": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "include": {
                  "type": "array",
                  "items": { "type": "string" },
                  "default": []
                }
              }
            }
          }
        },
        "integrity": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "hash": { "type": "string", "enum": ["sha256"], "default": "sha256" }
          }
        },
        "labels": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      }
    }
  },
  "not": {
    "anyOf": [
      { "required": ["result"] },
      { "required": ["error"] }
    ]
  }
}
