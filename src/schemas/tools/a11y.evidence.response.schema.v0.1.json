{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcp-tool-shop.github.io/schemas/tools/a11y.evidence.response.schema.v0.1.json",
  "title": "Tool Response Schema: a11y.evidence v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["mcp"],
  "properties": {
    "mcp": {
      "type": "object",
      "additionalProperties": false,
      "required": ["envelope", "request_id", "tool", "ok"],
      "properties": {
        "envelope": { "const": "mcp.envelope_v0_1" },
        "request_id": { "type": "string", "minLength": 1 },
        "tool": { "const": "a11y.evidence" },
        "ok": { "type": "boolean" }
      },
      "not": { "required": ["client"] }
    },
    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bundle"],
      "properties": {
        "bundle": { "$ref": "https://mcp-tool-shop.github.io/schemas/evidence.bundle.v0.1.json" }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message", "fix"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "fix": { "type": "string", "minLength": 1 }
      }
    }
  },
  "allOf": [
    {
      "if": { "properties": { "mcp": { "properties": { "ok": { "const": true } } } } },
      "then": { "required": ["result"], "not": { "required": ["error"] } }
    },
    {
      "if": { "properties": { "mcp": { "properties": { "ok": { "const": false } } } } },
      "then": { "required": ["error"], "not": { "required": ["result"] } }
    }
  ]
}
