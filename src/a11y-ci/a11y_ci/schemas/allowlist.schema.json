{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcp-tool-shop.dev/schemas/a11y-ci.allowlist.schema.json",
  "title": "a11y-ci Allowlist",
  "type": "object",
  "required": ["version", "allow"],
  "properties": {
    "version": { "type": "string", "enum": ["1"] },
    "allow": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["expires", "reason", "owner"],
        "oneOf": [
            { "required": ["finding_id"] },
            { "required": ["id"] },
            { "required": ["fingerprint"] }
        ],
        "properties": {
          "finding_id": { "type": "string", "minLength": 3 },
          "id": { "type": "string", "minLength": 3 },
          "fingerprint": { "type": "string", "minLength": 64, "maxLength": 64 },
          "expires": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "reason": { "type": "string", "minLength": 10 },
          "owner": { "type": "string", "minLength": 3 },
          "ticket": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
